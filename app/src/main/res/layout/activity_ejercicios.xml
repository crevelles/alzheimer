<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cristobal.alzheimer.EjerciciosActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/idBTNgimnasia"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:background="@android:color/holo_green_light"
            android:capitalize="none"
            android:fontFamily="@font/rubik"
            android:onClick="ventanaGimnasia"
            android:scaleType="centerCrop"
            android:text="@string/tituloGimnasia"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp" />

        <Button
            android:id="@+id/idBTNcognitiva"
            android:layout_width="match_parent"
            android:layout_height="287dp"
            android:background="@android:color/holo_orange_dark"
            android:capitalize="none"
            android:fontFamily="@font/rubik"
            android:onClick="ventanaCognitiva"
            android:scaleType="centerCrop"
            android:text="@string/tituloCongnitiva"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
